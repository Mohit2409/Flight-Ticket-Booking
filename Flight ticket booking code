#include <stdio.h>
#include <string.h>
//Variables of code used
    //a = age
    //d = discount for seniors
    //n = number of tickets
    //ta = rate of each ticket for adult
    //tc = rate of ticket for child
    //x = departure city
    //y = destination city
void ticketbooking()
{
    char name[30],x[20],y[20];
    char c[3];
    int a,n;
    printf("Enter your name : ");
    scanf("%s",name);
    printf("\nEnter your age : ");
    scanf("%d",&a);
    printf("\nEnter Departure City : ");
    scanf("%s",x);
    printf("\nEnter Destination City : ");
    scanf("%s",y);
    printf("\nEnter number of tickets you wanna buy : ");
    scanf("%d",&n);
    printf("\nYour ticket details : \n");
    printf("Ticket for %d people from %s to %s\n",n,x,y);
    printf("Confirmation(Yes/No):");
    scanf("%s",c);
    printf("%s\n",c);
    if (!strcmp(c,"Yes"))
    {
        printf("\nTicket confirmed");
    }
    else if (!strcmp(c,"No"))
    {
        printf("\nRestart ticket booking process");
    }
    else
    {
        printf("\nInvalid input");
    }
}
void ticketpurchase()
{
    
}
int main()
{   
    printf("\n**********Flight ticket reservation system**********\n");
    ticketbooking();
    ticketpurchase();
   //testing
   // printf("%s %d",name,a);
    return 0;
}
